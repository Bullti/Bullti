<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nowon.bul.mybatis.mapper.NoticeMapper">
 	
 	
 	<insert id="noticeSave">
 		insert into notice(board_title, board_content)
 		values(#{boardTitle},#{boardContent})
 	</insert>
 	
 	<select id="findAll" resultType="com.nowon.bul.domain.dto.NoticeDTO">
 		select * from notice
 		order by board_no desc
 	</select>
 	
 	<select id="findById" resultType="com.nowon.bul.domain.dto.NoticeDTO">
 		select * from notice
 		where no=#{boardNo}
 	</select>
 	
 	<delete id="deleteById">
 		delete from notice
 		where no=#{boardNo}
 	</delete>
 	
 	<update id="updateTitleOrContent">
 		update notice
 		set title=#{boardTitle}, content=#{boardContent}
 		where no=#{boardNo}
 	</update>
 	
</mapper>