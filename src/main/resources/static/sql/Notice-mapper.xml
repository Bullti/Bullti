<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nowon.bul.mybatis.mapper.NoticeMapper">
 	
 	
 	<insert id="save">
 		insert into notice(board_title, board_content)
 		values(#{boardTitle},#{boardContent})
 	</insert>
 	
 	<select id="findAllLimit" resultType="com.nowon.bul.domain.dto.NoticeDTO">
 		select * from notice
 		where board_no>0
 		order by board_no desc
 		LIMIT #{offset}, #{limit}
 	</select>
 	
 	<select id="countAll" resultType="int">
 		select count(*) from notice
 		where board_no>0
 	</select>
 	
 	
</mapper>